<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gdImage"
        android:layout_alignTop="@+id/gdImage"
        android:layout_toLeftOf="@+id/gdAuthBtn"
        android:adjustViewBounds="false"
        android:background="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/app_logo" />

    <ImageView
        android:id="@+id/gdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gdAuthBtn"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/google_drive" />

    <TextView
        android:id="@+id/tvDriveAuthActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/add_gd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/gdAuthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDriveAuthActivity"
        android:layout_centerHorizontal="true"
        android:text="OK" />

    <ProgressBar
        android:id="@+id/pbDriveAuthActivity"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDriveAuthActivity"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>