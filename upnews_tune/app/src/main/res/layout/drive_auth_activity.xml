<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/app_logo_full"
        android:layout_alignBottom="@+id/gdImage"
        android:layout_alignTop="@+id/gdImage"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/frameLayout2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/gdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/google_drive"
        android:layout_alignBottom="@+id/frameLayout2"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2" />

    <TextView
        android:id="@+id/tvDriveAuthActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_gd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_below="@+id/frameLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/gdAuthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDriveAuthActivity"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:layout_marginTop="8dp" />

    <ProgressBar
        android:id="@+id/pbDriveAuthActivity"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDriveAuthActivity"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/frameLayout2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>