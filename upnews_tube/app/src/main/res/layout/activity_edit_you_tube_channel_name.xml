<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobi.esys.upnews_tube.EditYouTubeChannelName">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEditYouTubeChannelName"
        android:singleLine="true"
        android:layout_weight="0.48"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/bEditYouTubeChannelName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nextFocusRight="@+id/bEditYouTubeChannelName"
        android:nextFocusLeft="@+id/bEditYouTubeChannelName"
        android:layout_toLeftOf="@+id/bEditYouTubeChannelName"
        android:layout_toStartOf="@+id/bEditYouTubeChannelName">
        <requestFocus/>
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:imeOptions="actionDone"
        android:id="@+id/bEditYouTubeChannelName"
        android:nextFocusRight="@+id/bEditYouTubeChannelName"
        android:nextFocusLeft="@+id/bEditYouTubeChannelName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
