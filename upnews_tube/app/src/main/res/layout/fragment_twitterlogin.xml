<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twLgnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:nextFocusDown="@+id/twSkipBtn">
        <requestFocus/>
    </com.twitter.sdk.android.core.identity.TwitterLoginButton>

    <Button
        android:id="@+id/twSkipBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/skip"
        android:textColor="@android:color/white"
        android:background="@drawable/youtube_element_background_selector"
        android:textStyle="bold"
        android:layout_below="@+id/twLgnBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:nextFocusUp="@+id/twLgnBtn"/>

</RelativeLayout>