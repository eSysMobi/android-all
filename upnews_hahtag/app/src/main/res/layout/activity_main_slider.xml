<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/embeded_slider_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".SliderActivity">

    <FrameLayout
        android:id="@+id/sliderCont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />


    <ImageView
        android:id="@+id/logoMainSlider"
        android:layout_width="320px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:alpha="0.3"
        android:background="@null"
        android:src="@drawable/upnews_logo_w2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180px"
        android:background="@drawable/shape_background_hashtag"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvTagView"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
