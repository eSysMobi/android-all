<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/embeded_slider_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainSliderActivity">

    <LinearLayout
        android:id="@+id/layoutScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logoMainSlider"
                android:layout_width="320px"
                android:layout_height="80px"
                android:alpha="0.3"
                android:background="@null"
                android:src="@drawable/upnews_logo_w2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llInfo"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp">

                <TextView
                    android:id="@+id/tvTagView"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:text="#news"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#bdbdbd"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tvTagCount"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:text="0 publications"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#bdbdbd"
                    android:textSize="28sp"
                    android:layout_alignTop="@+id/tvTagView"
                    android:layout_toRightOf="@+id/tvTagView"
                    android:layout_toEndOf="@+id/tvTagView"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutImages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".70"
            android:gravity="center_vertical">

            <FrameLayout
                android:id="@+id/flIg1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rlIg1"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivIg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/instagram_logo"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvIg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivIg1"
                        android:layout_alignLeft="@+id/ivIg1"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/shape_background_textview"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flIg2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rlIg2"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivIg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/instagram_logo"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvIg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivIg2"
                        android:layout_alignLeft="@+id/ivIg2"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/shape_background_textview"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flIg3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rlIg3"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivIg3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/instagram_logo"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvIg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivIg3"
                        android:layout_alignLeft="@+id/ivIg3"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/shape_background_textview"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutTwitter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25" />
    </LinearLayout>

</RelativeLayout>
