<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvPromoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="Promo!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/flPromoRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoHeader"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPromoRestaurant"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/recommended_food_3" />

            <TextView
                android:id="@+id/tvPromoRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Restaurant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_marginStart="15dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ivPromoRestaurant"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/ivPromoRestaurantRating"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:background="@drawable/rating_5"
                android:layout_alignBottom="@+id/ivPromoRestaurant"
                android:layout_alignLeft="@+id/tvPromoRestaurant"
                android:layout_alignStart="@+id/tvPromoRestaurant" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvPromoAfflicted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flPromoRestaurant"
        android:layout_alignStart="@+id/flPromoRestaurant"
        android:layout_below="@+id/flPromoRestaurant"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/afflicted_to"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPromoAfflicted_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoAfflicted"
        android:layout_centerHorizontal="true"
        android:text="Все блюда заказа"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPromoTimeOfAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoAfflicted_0"
        android:text="Акция проводится:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/tvPromoTimeOfActionDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoTimeOfAction"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Пн, вт, ср, чт, пт"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPromoTimeOfActionExact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoTimeOfActionDays"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="C 11.11.2011 по 12.12.2012, с 09:30 до 20:45"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPromoConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoTimeOfActionExact"
        android:text="При условии:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvPromoConditionsExact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPromoConditions"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Покупка на сумму не менее 400руб."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#78000000"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvPromoConditionsExact" />


</RelativeLayout>