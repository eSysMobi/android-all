<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mask_narrow"
    android:padding="8dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:id="@+id/ivFoodRV"
                android:background="@drawable/def_food" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:id="@+id/ivFoodRVFav"
                android:background="@drawable/favorite_full"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ivFoodRVCart"
                android:background="@drawable/cart_icon"
                android:layout_alignLeft="@+id/ivFoodRV"
                android:layout_alignBottom="@+id/ivFoodRV"
                android:layout_margin="5dp"
                android:visibility="gone" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Food name"
                    android:id="@+id/tvFoodNameRV"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/price"
                        android:id="@+id/tvFoodPrRV"
                        android:layout_marginRight="4dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:textColor="#ffffff"
                        android:id="@+id/tvFoodPriceRV" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notice"
        android:id="@+id/tvFoodNoticeRV"
        android:textColor="#ffffff"
        android:visibility="gone"/>

</LinearLayout>