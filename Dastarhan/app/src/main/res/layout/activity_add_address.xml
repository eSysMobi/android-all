<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobi.esys.dastarhan.AddAddressActivity">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/flAddAddressCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivAddrCity"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back" />

            <EditText
                android:id="@+id/etAddAddressCity"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivAddrCity"
                android:layout_alignTop="@+id/ivAddrCity"
                android:layout_alignRight="@+id/ivAddrCity"
                android:layout_alignBottom="@+id/ivAddrCity"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="@string/city"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/flAddAddressDistrict"
        android:layout_below="@+id/flAddAddressCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivAddrDistr"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back" />

            <EditText
                android:id="@+id/etAddAddressDistrict"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivAddrDistr"
                android:layout_alignTop="@+id/ivAddrDistr"
                android:layout_alignRight="@+id/ivAddrDistr"
                android:layout_alignBottom="@+id/ivAddrDistr"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="@string/distr"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/flAddAddressExact"
        android:layout_below="@+id/flAddAddressDistrict"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivAddrExact"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back" />

            <EditText
                android:id="@+id/etAddAddressExactAddress"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivAddrExact"
                android:layout_alignTop="@+id/ivAddrExact"
                android:layout_alignRight="@+id/ivAddrExact"
                android:layout_alignBottom="@+id/ivAddrExact"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="@string/exact_addr"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/bAddAddress"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/flAddAddressExact"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pbAddAddress"
        android:layout_below="@+id/flAddAddressExact"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />
</RelativeLayout>
