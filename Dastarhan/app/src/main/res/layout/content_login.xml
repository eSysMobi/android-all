<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobi.esys.dastarhan.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/smooth_background">

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/navFrame"/>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flEmail"
        android:layout_above="@+id/navFrame"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivInputBack1"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/etEmail"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivInputBack1"
                android:layout_alignTop="@+id/ivInputBack1"
                android:layout_alignRight="@+id/ivInputBack1"
                android:layout_alignBottom="@+id/ivInputBack1"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flPassword"
        android:layout_below="@+id/navFrame"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivInputBack2"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/etPass"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivInputBack2"
                android:layout_alignTop="@+id/ivInputBack2"
                android:layout_alignRight="@+id/ivInputBack2"
                android:layout_alignBottom="@+id/ivInputBack2"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLoginActLogo"
        android:background="@drawable/logo"
        android:layout_above="@+id/flEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flLoginButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/flPassword"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivLoginButton"
                android:layout_centerVertical="true"
                android:background="@drawable/login_button_back"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivLoginButton"
                android:layout_alignTop="@+id/ivLoginButton"
                android:layout_alignRight="@+id/ivLoginButton"
                android:layout_alignBottom="@+id/ivLoginButton"
                android:gravity="center"
                android:text="Login"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sign up?"
        android:id="@+id/tvSignUp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/flLoginButton"
        android:layout_alignLeft="@+id/flLoginButton"
        android:layout_alignStart="@+id/flLoginButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Remind?"
        android:id="@+id/tvRemind"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/tvSignUp"
        android:layout_alignRight="@+id/flLoginButton"
        android:layout_alignEnd="@+id/flLoginButton" />

</RelativeLayout>
