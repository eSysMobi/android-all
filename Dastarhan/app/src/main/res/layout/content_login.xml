<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobi.esys.dastarhan.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/smooth_background">

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/navFrame"/>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flEmail"
        android:layout_above="@+id/navFrame"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivInputBack1"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back" />

            <EditText
                android:id="@+id/etEmail"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivInputBack1"
                android:layout_alignTop="@+id/ivInputBack1"
                android:layout_alignRight="@+id/ivInputBack1"
                android:layout_alignBottom="@+id/ivInputBack1"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="@string/login_email"
                android:imeOptions="actionNext"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flPassword"
        android:layout_below="@+id/navFrame"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivInputBack2"
                android:layout_centerVertical="true"
                android:background="@drawable/input_back" />

            <EditText
                android:id="@+id/etPass"
                android:theme="@style/LoginEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivInputBack2"
                android:layout_alignTop="@+id/ivInputBack2"
                android:layout_alignRight="@+id/ivInputBack2"
                android:layout_alignBottom="@+id/ivInputBack2"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:hint="@string/login_pass"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLoginActLogo"
        android:background="@drawable/logo"
        android:layout_marginBottom="95dp"
        android:layout_above="@+id/navFrame"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/flLoginButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/flPassword"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivLoginButton"
                android:layout_centerVertical="true"
                android:background="@drawable/login_button_back" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivLoginButton"
                android:layout_alignTop="@+id/ivLoginButton"
                android:layout_alignRight="@+id/ivLoginButton"
                android:layout_alignBottom="@+id/ivLoginButton"
                android:gravity="center"
                android:text="@string/skip"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_sign_up"
        android:id="@+id/tvSignUp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/flLoginButton"
        android:layout_alignLeft="@+id/flLoginButton"
        android:layout_alignStart="@+id/flLoginButton"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_remind"
        android:id="@+id/tvRemind"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/tvSignUp"
        android:layout_alignRight="@+id/flLoginButton"
        android:layout_alignEnd="@+id/flLoginButton"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/is_need_remember"
        android:id="@+id/tvRemember"
        android:layout_above="@+id/navFrame"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:enabled="false" />

    <FrameLayout
        android:layout_width="69dp"
        android:layout_height="55dp"
        android:id="@+id/flLoginRememberYes"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/navFrame"
        android:layout_toLeftOf="@+id/navFrame"
        android:visibility="invisible"
        android:enabled="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivLoginRememberYes"
                android:layout_centerVertical="true"
                android:background="@drawable/button_yes_no" />

            <TextView
                android:id="@+id/tvLoginRememberYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivLoginRememberYes"
                android:layout_alignTop="@+id/ivLoginRememberYes"
                android:layout_alignRight="@+id/ivLoginRememberYes"
                android:layout_alignBottom="@+id/ivLoginRememberYes"
                android:gravity="center"
                android:text="Yes"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="69dp"
        android:layout_height="55dp"
        android:id="@+id/flLoginRememberNo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/navFrame"
        android:layout_toRightOf="@+id/navFrame"
        android:visibility="invisible"
        android:enabled="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivLoginRememberNo"
                android:layout_centerVertical="true"
                android:background="@drawable/button_yes_no" />

            <TextView
                android:id="@+id/tvLoginRememberNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivLoginRememberNo"
                android:layout_alignTop="@+id/ivLoginRememberNo"
                android:layout_alignRight="@+id/ivLoginRememberNo"
                android:layout_alignBottom="@+id/ivLoginRememberNo"
                android:gravity="center"
                android:text="No"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
